@model IEnumerable<Book>

@{
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/css/admin/admin_database.css">

<!-- Управление БД -->
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="pt-3 pb-2 mb-3 border-bottom">
        <h3>Управление БД</h3>
    </div>

    <!-- Данные -->
    <div class="mt-4 mb-2">
        <span class="count-books">
            Количество книг в БД:
            <span class="count">@Model.Count()</span>
        </span>
    </div>

    <!-- Кнопка Очистить -->
    @*<div class="block-clear">
        <button type="submit" class="clear-data">Очистить все данные</button>
    </div>*@

    @if (Model.Count() == 0)
    {
        <!-- Кнопка Заполнить -->
        <div class="block-seed">
            <form asp-action="SeedData" method="post">
                <button type="submit" class="seed-data">Заполнить данными</button>
            </form>
        </div>
    }
    else
    {
        <!-- Кнопка Заполнить -->
        <div class="block-seed">
            <button type="submit" class="seed-data-disabled" disabled>Заполнить данными</button>
        </div>
    }


</main>